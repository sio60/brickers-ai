# Blueprint PDF Server Environment Variables

# Timezone
TZ=Asia/Seoul

# AWS
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
S3_PUBLIC_BASE_URL=

# S3
USE_S3=true
S3_PREFIX_PDF=uploads/pdf
S3_PRESIGN=false
S3_PRESIGN_EXPIRES=86400

# SQS
AWS_SQS_PDF_QUEUE_URL=https://sqs.ap-northeast-2.amazonaws.com/ACCOUNT_ID/brickers-blueprints-queue
AWS_SQS_ENABLED=true
SQS_POLL_INTERVAL=5
SQS_MAX_MESSAGES=5
SQS_WAIT_TIME=10
SQS_VISIBILITY_TIMEOUT=600

# Backend
BACKEND_URL=http://backend:8080
INTERNAL_API_TOKEN=

# LDView
LDVIEW_BIN=LDView
LDRAWDIR=/usr/share/ldraw
